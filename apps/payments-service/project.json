{
  "name": "payments-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/payments-service/src",
  "projectType": "application",
  "targets": {
    "build": {
      "dependsOn": [],
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/payments-service",
        "main": "apps/payments-service/src/main.ts",
        "tsConfig": "apps/payments-service/tsconfig.app.json",
        "isolatedConfig": true,
        "webpackConfig": "apps/payments-service/webpack.config.ts"
      },
      "configurations": {
        "development": {
          "generatePackageJson": true,
          "generateLockfile": true
        },
        "production": {
          "generatePackageJson": true,
          "generateLockfile": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "payments-service:build",
        "port": 19929
      },
      "configurations": {
        "development": {
          "buildTarget": "payments-service:build:development"
        },
        "production": {
          "buildTarget": "payments-service:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/payments-service/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/payments-service/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "ts-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --build --force --verbose apps/payments-service/tsconfig.json"
          }
        ]
      }
    },
    "rules-engine-run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register --project apps/payments-service/tsconfig.app.json apps/payments-service/src/rules-engine/scripts/run-engine.ts"
      }
    },
    "rules-engine-validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register --project apps/payments-service/tsconfig.app.json apps/payments-service/src/rules-engine/scripts/validate-rules.ts"
      }
    }
  },
  "tags": []
}
